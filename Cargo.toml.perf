# Performance Configuration
[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"

[profile.dev]
opt-level = 1
debug = true

# Performance features
[features]
default = ["performance"]
performance = ["tokio/rt-multi-thread", "sqlx/runtime-tokio-native-tls"]
metrics = ["prometheus", "tower-http/metrics"]
